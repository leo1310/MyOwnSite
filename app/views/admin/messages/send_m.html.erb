<%= render 'layouts/admin'%>
<%= render 'admin_messages'%>
<%= javascript_include_tag 'admin/messages/send_m' %>

<div class="send">
	<h3>Нове повідомлення</h3>
	<%= form_for Message.new, :url => {:controller=>"messages", :action => "create", :id=> current_admin.id} do |f|  %> 
    
    <table>
    	<tr>
    		<td class="mail">
    			Від кого:
    		</td>
    		<td class="mail" >
    			<%= f.text_field :who_send_mail, :value => @admin.nik_name, :id=>"nik_name"  %>
    		</td>
    	</tr>
    	<tr>
    		<td class="mail">
    			Кому:
    		</td>
    		<td class="mail">
    			<%= f.text_field :who_get_mail%>
    		</td>
    	</tr>
    	<tr>
    		<td class="mail">
    			Заголовок:
    		</td>
    		<td class="mail">
    			<%= f.text_field :subject%>
    		</td>    		
    	</tr>
    	<%= f.text_field :read_message, :type=>"hidden", :value=>"not_read"%>
    </table>       
    </br>
    <div class="text_description">
        Текст повідомлення:
        <div>
    	   <%= f.text_area :description%>
	   </div>
    <%= f.submit "Надіслати"%> 
    </div>  
    
<%end%>
</div>