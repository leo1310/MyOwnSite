<%= render 'layouts/admin'%>
<%= render 'admin_messages'%>
<%= javascript_include_tag 'admin/messages/inbox' %>

<div class="sent">
<h3>Ваші вихідні повідомлення</h3>
<div class="digg_pagination">
	<div class="page_info">
		<%= page_entries_info @messages%>    		
	</div>		
	<%= will_paginate @messages%>
</div>

<table class="brep-table" cellpadding="0" cellspacing="0">
		<thead class="tbl-header">
    		<tr class="gray">
      			<th class="tbl-item-rate">
        			<div> # п/п</div>
        		</th>      			
      			<th>
        			<div> Кому </div>
        		</th>
      			<th>
        			<div> Заголовок </div>
        		</th>
      			<th>
        			<div> Дата </div>
        		</th> 
                <th>
                    <div> Видалити </div>
                </th>     			
    		</tr>
    	</thead>


    	<% @messages.each do |message|%>
    	<thead>    		
	    		<tr >
	    			<td class="tbl-item-rate">
    				<div><%= @index %></div>
				</td>				
				<td>
					<div>
						<%= message.who_get_mail %>
					</div>
				</td>
				<td>
					<div>
						<%= message.subject %>
					</div>
				</td>
				<td>
					<div>
						<%= message.created_at.to_time.strftime('%d %B, %Y @ %H:%M') %>
					</div>
				</td>
                <td>
                    <div>
                        <%= link_to "Видалити", :controller=>"admin/messages", :action=>"delete_sent_message", :id => message.id %>
                    </div>
                </td>
	    		</tr>    		
    	</thead>
    	<tbody>
    		<tr>
    			<td colspan = "5" align="left">
    				<div class="text_message">
                        <b>Від кого:</b>
        				<%= message.who_send_mail %></br>
        				<b>Заголовок:</b>
        				<%= message.subject %></br>
        				<b>Текст повідомлення:</b></br>
        				<%= message.description %>
                    </div>
    			</td>
    		</tr>
    	</tbody>
    	<% @index += 1 %>
    	<%end%>
	</table> 
</div>