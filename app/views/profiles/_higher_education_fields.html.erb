<div class="nested-fields">
	<div class="information_education">			
		<table>
			<tr>
				<td>
					Країна:
				</td>
				<td></td>
				<td>
					<div class="sel">
						<%= f.select :country, @countries_name %>	            					
					</div>
				</td>
			</tr>
			<tr>
				<td>
					Місто:
				</td>
				<td></td>
				<td>
					<%= f.text_field :town %>
				</td>
			</tr>
			<tr>
				<td>
					ВНЗ:
				</td>
				<td></td>
				<td>
					<%= f.text_field :high_school %>
				</td>
			</tr>
			<tr>
				<td>
					Факультет:
				</td>
				<td></td>
				<td>
					<%= f.text_field :faculty %>
				</td>
			</tr>
			<tr>
				<td>
					Кафедра:
				</td>
				<td></td>
				<td>
					<%= f.text_field :department %>
				</td>
			</tr>
			<tr>
				<td>
					Початок навчання:
				</td>
				<td></td>
				<td>
					<div class="sel">
				    	<%= f.date_select :start_year, :discard_day => true, :discard_month => true, :start_year => 1950 %>	
				    </div>
				</td>
			</tr>
			<tr>
				<td>
					Закінчення навчання:
				</td>
				<td></td>
				<td>
					<div class="sel">
						<%= f.date_select :end_year, :discard_day => true, :discard_month => true, :start_year => 1950 %> 	
					</div>
				</td>
			</tr>
			<tr>
				<td>
					Статус:
				</td>
				<td></td>
				<td>
					<%= f.text_field :status %>
				</td>
			</tr>			
		</table>		
	</div>
	</br>
	<div class="delete_school">
		Видалити ВНЗ <%= link_to_remove_association image_tag('delete.png'), f %>		
	</div>
	</br>
</div>