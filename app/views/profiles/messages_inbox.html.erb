<%= stylesheet_link_tag 'log', :media=> 'all' %>
<%= stylesheet_link_tag 'profile_messages', :media => "all" %>
<%= javascript_include_tag 'profile/messages' %>

<div class="tabbable tabs-left" style="margin-top: 25px"> <!-- Only required for left/right tabs -->
	<%= render 'layouts/profile'%>
	<div class="tab-content">
        <div class="tab-pane active" >           
            <%= render 'messages_friends'%>            
            <div class="profiles_input_messages">
				<h3>Ваші вхідні повідомлення</h3>
			
				<div class="digg_pagination">
					<div class="page_info">
						<%= page_entries_info @messages%>    		
					</div>		
					<%= will_paginate @messages%>
				</div>
				<table class="brep-table" cellpadding="0" cellspacing="0">
					<thead class="tbl-header">
			    		<tr class="gray">
			      			<th class="tbl-item-rate">
			        			<div> </div>
			        		</th>
			        		<th style="width: 100px">
			        			<div> Аватар</div>
			        		</th>
			      			<th style="width: 230px">
			        			<div> Дата </div>
			    			</th>
			      			<th style="width: 300px">
			        			<div> Повідомлення </div>
			        		</th>
			      			<th style="width: 100px">
			        			<div> Видалити </div>
			        		</th>
			      			
			    		</tr>
			    	</thead>
			    	<% @messages.each do |message|%>
				    	<thead>
				    		<% if message.read_message.eql?("not_read")%>
					    		<tr class="bold" >
					    			<%= render 'table_thead', :message => message%>
					    		</tr>
				    		<%else%>
					    		<tr>
					    			<%= render 'table_thead', :message => message%>
					    		</tr>
					    	<%end%>
				    	</thead>
				    	<tbody>
				    		<tr>
				    			<td colspan = "5" align="left">
				    				<div class="text_message">
				                        <b>Від кого:</b>
				        				<%= message.who_send_mail %></br>
				        				<b>Заголовок:</b>
				        				<%= message.subject %></br>
				        				<b>Текст повідомлення:</b></br>
				        				<%= message.description %>
				                    </div>
				    			</td>
				    		</tr>
				    	</tbody>			    	
			    	<%end%>
				</table>             

			</div> 
        </div>        
	</div>
</div>

