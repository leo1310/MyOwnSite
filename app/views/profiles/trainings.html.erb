<%= stylesheet_link_tag 'log', :media=> 'all' %>
<%= stylesheet_link_tag 'profile_about_me', :media => "all" %>
<%= javascript_include_tag 'cocoon' %>

<div class="tabbable tabs-left" style="margin-top: 25px"> <!-- Only required for left/right tabs -->
	<%= render 'layouts/profile'%>
	<div class="tab-content">
        <div class="tab-pane active" >
            <%= render 'about_me'%>
            <div id="my_information_green">	 
                <h1>Освіта</h1>
                <%= render 'education'%>
                <div id="secondary_education">
                    <h1>Тренінги</h1>
                    <%= form_for @user, :url => {:controller=>"profiles", :action => "update_training", :id=> current_user.id} do |f|  %>
                        <%= f.fields_for :trainings do |t_education| %>
                            <%= render 'training_fields', :f=>t_education %>                                 
                        <%end%> 
                        <div class="links" style="width: 100px; margin-left: 240px">                 
                            <%= link_to_add_association "Додати тренінг", f, :trainings, :partial =>"training_fields"  %>  
                        </div>    
                        <%= f.submit "Зберегти"%>
                    <%end%>
                </div>
        	</div>
        </div>        
	</div>
</div>