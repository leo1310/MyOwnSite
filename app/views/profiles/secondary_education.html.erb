<%= stylesheet_link_tag 'log', :media=> 'all' %>
<%= stylesheet_link_tag 'profile_about_me', :media => "all" %>
<%= javascript_include_tag 'cocoon' %>


<div class="tabbable tabs-left" style="margin-top: 25px"> <!-- Only required for left/right tabs -->
	<%= render 'layouts/profile'%>
	<div class="tab-content">
        <div class="tab-pane active" >
            <%= render 'about_me'%>
            <div id="my_information_green">	 
            	<h1>Освіта</h1>
            	<%= render 'education'%>
            	<div id="secondary_education">
            		<h1>Середня освіта</h1>
            		<%= form_for @user, :url => {:controller=>"profiles", :action => "update_secondary_education", :id=> current_user.id} do |f|  %>
                        <%= f.fields_for :secondary_educations do |s_education| %>
                            <%= render 'secondary_education_fields', :f=>s_education %>                                 
                        <%end%> 
                        <div class="links">                 
                            <%= link_to_add_association "Додати школу", f, :secondary_educations, :partial =>"secondary_education_fields"  %>       
                        </div>    
                        <%= f.submit "Зберегти"%>
                    <%end%>
        		</div>
        	</div>
        </div>        
	</div>
</div>
