<%= stylesheet_link_tag 'log', :media=> 'all' %>
<%= stylesheet_link_tag 'profile_friends', :media=> 'all' %>
<%= javascript_include_tag 'friends/all' %>


<div class="tabbable tabs-left" style="margin-top: 25px"> <!-- Only required for left/right tabs -->
	<%= render 'layouts/profile'%>
	<div class="tab-content">
        <div class="tab-pane active" >
        	<%= render 'friends'%>
            <h1>Мої Друзі</h1>
            <div class="digg_pagination">
			<div class="page_info">
				<%= page_entries_info @friends%>    		
			</div>		
			<%= will_paginate @friends%>
		</div>
            <div id='wrap_search'>
                  <div id='search_friend'>
                        <input type='text' id='search' placeholder="Введіть ім'я друга">
                        <button>Знайти</button>
                  </div>
            </div>
            <%= render 'friends_all'%>            
        </div>        
	</div>
</div>